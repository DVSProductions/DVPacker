<Window x:Class="DVPacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DVPacker"
        mc:Ignorable="d" Background="{DynamicResource BGColor}"
        Title="DVPacker" Height="450" Width="415.613">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Frame x:Name="Viewer" NavigationUIVisibility="Hidden"/>
		<Grid Grid.Row="2" VerticalAlignment="Bottom">
			<Button Style="{DynamicResource BTStyle}" x:Name="btN" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="10" Width="100" Content="Next>" Click="Button_Click_4"/>
			<Button Style="{DynamicResource BTStyle}" x:Name="btP"  HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10" Width="100" Content="&lt;Previous" Visibility="Hidden" Click="Button_Click_5"/>
		</Grid>
	</Grid>
</Window>
