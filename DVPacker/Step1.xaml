<Page x:Class="DVPacker.Step1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVPacker"
	  mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Step1">

	<Grid Margin="2.5">
		<local:FieldSet  Background="{DynamicResource BGColor}" BorderBrush="{DynamicResource LightRed}" Foreground="White" Header="Step 1: Hidden dll">
			<Button Margin="5" Style="{DynamicResource BTStyle}" Foreground="Red" Content="Click to select a file" BorderBrush="{x:Null}" FontSize="16" Click="Button_Click"/>
		</local:FieldSet>
	</Grid>
</Page>
